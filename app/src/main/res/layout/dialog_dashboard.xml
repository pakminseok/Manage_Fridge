<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/tv_header_fridge"
        android:text="[재료/음식명]"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/ev_fridge"
        android:hint="냉장고에 넣을 재료나 음식명을 입력하세요"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_header_fridge"/>
    <TextView
        android:id="@+id/tv_header_expiration_at"
        android:text="[유통 기한]"
        android:textSize="20dp"
        android:layout_below="@id/ev_fridge"
        android:layout_marginTop="10dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_expiration_at"
        android:hint="날짜를 선택하세요"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_header_expiration_at"/>

</RelativeLayout>