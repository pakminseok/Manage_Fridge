<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >

    <TextView
        android:id="@+id/tv_item_of_fridge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_menu"
        android:layout_toStartOf="@id/iv_menu"
        android:textAlignment="center"
        android:textSize="25dp"/>

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:src="@drawable/ic_vertical_dots" />

    <TextView
        android:text="유통 기한: "
        android:textSize="23dp"
        android:layout_below="@id/iv_menu"
        android:id="@+id/header_expiration_at"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_expiration_fridge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_menu"
        android:layout_toRightOf="@id/header_expiration_at"
        android:textAlignment="center"
        android:textSize="23dp"/>

    <TextView
        android:text="남은 날짜: "
        android:textSize="23dp"
        android:layout_below="@id/header_expiration_at"
        android:id="@+id/header_remain_day"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_remain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_expiration_fridge"
        android:layout_toRightOf="@id/header_remain_day"
        android:textAlignment="center"
        android:textSize="23dp"/>


</RelativeLayout>