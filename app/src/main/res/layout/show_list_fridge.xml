<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/border_layout"
    >

    <TextView
        android:text="음식 이름: "
        android:id="@+id/header_name"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        />
    <TextView
        android:id="@+id/tv_item_of_fridge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/header_name"
        android:textAlignment="center"
        android:textSize="25dp"/>

    <TextView
        android:text="유통 기한: "
        android:textSize="25dp"
        android:layout_below="@id/header_name"
        android:id="@+id/header_expiration_at"
        android:layout_width="110dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_expiration_fridge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_name"
        android:layout_toRightOf="@id/header_expiration_at"
        android:textAlignment="center"
        android:textSize="25dp"/>

    <TextView
        android:text="남은 날짜: "
        android:textSize="25dp"
        android:layout_below="@id/header_expiration_at"
        android:id="@+id/header_remain_day"
        android:layout_width="110dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_remain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_expiration_fridge"
        android:layout_toRightOf="@id/header_remain_day"
        android:textAlignment="center"
        android:textSize="25dp"/>


</RelativeLayout>